# All-in-One Dockerfile for Railway
# Includes both FastAPI and Ollama in one container

FROM ollama/ollama:latest

# Install Python and pip
RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    python3-venv \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy Python requirements and install in virtual environment
COPY requirements.txt .
RUN python3 -m venv /opt/venv && \
    /opt/venv/bin/pip install --no-cache-dir --upgrade pip && \
    /opt/venv/bin/pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY . .

# Create startup script that runs both Ollama and FastAPI
RUN echo '#!/bin/bash\n\
# Set aggressive memory limits for Ollama\n\
export OLLAMA_MAX_LOADED_MODELS=1\n\
export OLLAMA_NUM_PARALLEL=1\n\
export OLLAMA_FLASH_ATTENTION=1\n\
export OLLAMA_HOST=0.0.0.0:11434\n\
export OLLAMA_KEEP_ALIVE=30s\n\
export OLLAMA_MAX_QUEUE=1\n\
export OLLAMA_SCHEDULE_TIMEOUT=10s\n\
\n\
# Start Ollama in background with lower priority and memory limit\n\
nice -n 15 ollama serve &\n\
OLLAMA_PID=$!\n\
\n\
# Wait for Ollama to start\n\
echo "Waiting for Ollama to start..."\n\
sleep 25\n\
\n\
# Check if Ollama is still running\n\
if kill -0 $OLLAMA_PID 2>/dev/null; then\n\
    echo "Ollama is running, attempting to pull model..."\n\
    # Try to pull model with timeout\n\
    timeout 90 ollama pull tinyllama || {\n\
        echo "Model pull failed or timed out, killing Ollama to save memory..."\n\
        kill $OLLAMA_PID 2>/dev/null || true\n\
        wait $OLLAMA_PID 2>/dev/null || true\n\
    }\n\
else\n\
    echo "Ollama failed to start, continuing in fallback mode..."\n\
fi\n\
\n\
# Start FastAPI with virtual environment and reduced resources\n\
exec /opt/venv/bin/uvicorn web_api:app --host 0.0.0.0 --port ${PORT:-8080} --workers 1 --timeout-keep-alive 30\n\
' > /app/start.sh && chmod +x /app/start.sh

# Expose port
EXPOSE $PORT

# Use the startup script
CMD ["/app/start.sh"]
